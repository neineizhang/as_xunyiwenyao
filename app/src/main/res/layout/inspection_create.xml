<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/background_login">

   		<com.zll.xunyiwenyao.util.TopBarView  
        android:id="@+id/topbar"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        custom:titleText="开具基本检查单"   
        custom:titleSize="6sp"   
        custom:titleColor="@android:color/white"   
        custom:leftBtn="@drawable/back_page"   
        custom:rightBtn="@drawable/edit_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查单名称：" />
        
        <View  
    	android:layout_width="1px" 
    	android:layout_height="match_parent"
    	android:background="#BFBFBF"
    	android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>
   
    <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#BFBFBF"

    />
    
    <!--病人基本信息 -->
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:text="病人信息"
	            android:textColor="#000000"
	        	android:textStyle="bold"
	        	android:background="#B0B0B0"
	        	android:textSize="18sp"
	            android:layout_weight="2" />
        
	        <View  android:layout_height="1px" 
	           android:layout_width="match_parent"
	           android:background="#BFBFBF"/>

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1" >
	
	            <TextView
	                android:id="@+id/name_view"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="姓名" 
	                android:layout_weight="1"/>
	             <View  
			    	android:layout_width="1px" 
			    	android:layout_height="match_parent"
			    	android:background="#BFBFBF"
			    	android:layout_gravity="center_horizontal"/>
	
	            <EditText
	                android:id="@+id/name_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="3" />
	
	        </LinearLayout>
	        
  
       
	        <View  android:layout_height="1px" 
	           android:layout_width="match_parent"
	           android:background="#BFBFBF" />
	         <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1" >
	
	          	  <TextView
	                android:id="@+id/sexy_view"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="性别" 
	                android:layout_weight="1"/>
	                <View  
			    	android:layout_width="1px" 
			    	android:layout_height="match_parent"
			    	android:background="#BFBFBF"
			    	android:layout_gravity="center_horizontal" />
	
	           		 <EditText
	                android:id="@+id/sexy_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="3"  />

        	</LinearLayout>
        
  
       
	        <View  android:layout_height="1px" 
	           android:layout_width="match_parent"
	           android:background="#BFBFBF" />
	       
	        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="1">

            	<TextView
	                android:id="@+id/age_view"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="年龄" 
	                android:layout_weight="1"/>
                <View  
			    	android:layout_width="1px" 
			    	android:layout_height="match_parent"
			    	android:background="#BFBFBF"
			    	android:layout_gravity="center_horizontal" />

	            <EditText
	                android:id="@+id/age_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="3"/>

      		  </LinearLayout>
       
		        <View  android:layout_height="1px" 
		           android:layout_width="match_parent"
		           android:background="#BFBFBF"/>

		          <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" 
		            android:layout_weight="1">

		            <TextView
		                android:id="@+id/clinical_diagnosis_view"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:text="临床诊断" 
		                android:layout_weight="1"/>
		             <View  
		    	       android:layout_width="1px" 
				    	android:layout_height="match_parent"
				    	android:background="#BFBFBF"
				    	android:layout_gravity="center_horizontal" />

		            <EditText
		                android:id="@+id/clinical_diagnosis_text"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="3" />

      			  </LinearLayout>
        
       
			        <View  android:layout_height="1px" 
			           android:layout_width="match_parent"
			           android:background="#BFBFBF" />
   		 </LinearLayout>
   		 
       <!-- 检验信息 -->
         <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:text="检查信息"
	            android:textColor="#000000"
	        	android:textStyle="bold"
	        	android:background="#B0B0B0"
	        	android:textSize="18sp"
	            android:layout_weight="2" />
        
	        <View  android:layout_height="1px" 
	           android:layout_width="match_parent"
	           android:background="#BFBFBF"/>    
	           
	        <EditText
		        android:id="@+id/inspection_text"
		        android:layout_width="match_parent"
		        android:layout_height="120sp"
		        android:ems="10"
		        android:inputType="textMultiLine" >
			  </EditText>
	    </LinearLayout> 
	    <!-- 其他信息 -->
	         <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:text="其他信息"
	            android:textColor="#000000"
	        	android:textStyle="bold"
	        	android:background="#B0B0B0"
	        	android:textSize="18sp"
	            android:layout_weight="2" />
        
	        <View  android:layout_height="1px" 
	           android:layout_width="match_parent"
	           android:background="#BFBFBF"/>    

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1" >
	
	            <TextView
	                android:id="@+id/date_view"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="开具日期" 
	                android:layout_weight="1"/>
	             <View  
			    	android:layout_width="1px" 
			    	android:layout_height="match_parent"
			    	android:background="#BFBFBF"
			    	android:layout_gravity="center_horizontal"/>
	
	            <EditText
	                android:id="@+id/date_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="3" 
	                android:inputType="date"/>
	
	        </LinearLayout>
	        
	        <View  android:layout_height="1px" 
	           android:layout_width="match_parent"
	           android:background="#BFBFBF"/>    

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1" >
	
	            <TextView
	                android:id="@+id/comment_view"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:text="备注" 
	                android:layout_weight="1"/>
	             <View  
			    	android:layout_width="1px" 
			    	android:layout_height="match_parent"
			    	android:background="#BFBFBF"
			    	android:layout_gravity="center_horizontal"/>
	
	            <EditText
	                android:id="@+id/comment_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="3" />
	
	        </LinearLayout>
	    </LinearLayout>  
	    
<!-- 按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
	        

         
         <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存" />

        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提交" />



    </LinearLayout>

</LinearLayout>
