<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/background_login"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/prescription_create_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_login_div"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="处方查询"
            android:textSize="16dp" />

    </LinearLayout>

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RadioGroup
                    android:id="@+id/main_tab_group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/query_all"
                        android:layout_weight="1.0"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"
                        android:text="全部" />

                    <RadioButton
                        android:id="@+id/query_waitcommit"
                        android:layout_weight="1.0"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"
                        android:checked="true"
                        android:text="待提交" />

                    <RadioButton
                        android:id="@+id/query_waitcheck"
                        android:layout_weight="1.0"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"
                        android:text="待审核" />

                    <RadioButton
                        android:id="@+id/query_commitok"
                        android:layout_weight="1.0"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"
                        android:text="审核通过" />


                    <RadioButton
                        android:id="@+id/query_commitno"
                        android:layout_weight="1.0"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"
                        android:text="审核不通过" />
                </RadioGroup>

                <TextView
                    android:id="@+id/main_tab_new_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginLeft="60dip"
                    android:layout_marginTop="1dip"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

    </TabHost>

</RelativeLayout>