<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/background_login">

   		<com.zll.xunyiwenyao.util.TopBarView  
        android:id="@+id/topbar"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        custom:titleText="用户药品评价浏览"   
        custom:titleSize="6sp"   
        custom:titleColor="@android:color/white"   
        custom:leftBtn="@drawable/back_page"   
        custom:rightBtn="@drawable/edit_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*标题"
            android:layout_weight="0.07" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#BFBFBF"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.31"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp">

        <TextView
            android:id="@+id/drug_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="*药品"
            android:layout_weight="0.61"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#BFBFBF"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/drug_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.53"
            android:inputType="date"/>
        <Button
            android:id="@+id/drug_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="*评价内容"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="#B0B0B0"
            android:textSize="18sp"
            android:layout_weight="2" />

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#BFBFBF"/>

        <EditText
            android:id="@+id/review_content"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_weight="273.56">
        </EditText>
    </LinearLayout>

    <!-- 其他信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="其他信息"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="#B0B0B0"
            android:textSize="18sp"
            android:layout_weight="2" />

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#BFBFBF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/date_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="提交日期"
                android:layout_weight="1"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#BFBFBF"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:inputType="date"/>
            <Button
                android:id="@+id/date_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择" />

        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#BFBFBF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/doctor_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="医师"
                android:layout_weight="1"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#BFBFBF"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/doctor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:enabled="false"/>

        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#BFBFBF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/comment_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="备注"
                android:layout_weight="1"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#BFBFBF"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >





        <Button
            android:id="@+id/button_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提交" />



    </LinearLayout>


</LinearLayout>
